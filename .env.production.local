# Production Environment Variables for Bubble AI Backend
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# MCP Server URLs
WEB_SEARCH_MCP_URL=http://web-search-mcp:3001
BUBBLE_SEARCH_URL=http://bubble-search:3002
MCP_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# Monitoring & Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Security
ENABLE_CORS=true
CORS_ORIGINS=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
ENABLE_CACHING=true
CACHE_TTL=3600

# Database (if needed for future)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bubble_ai
